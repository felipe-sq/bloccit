<div class="row">
  <div class="col-md-4">
    <h1>Sign Up Confirmation</h1><br>
    <h2>Are you sure these values are correct?</h2>
  </div>
  <div class="col-md-4">
    <h3>Email: <%= @user.email %> </h3>
    <h3>Name: <%= @user.name %> </h3>
    <h3>Password: <%= @user.password %> </h3>
    <h3>Password Confirmation: <%= @user.password_confirmation %> </h3>
  </div>

  <div class="col-md-4">
  <%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, class: 'btn btn-success' %>
  <%= button_to "No", new_user_path(@user), class: 'btn btn-primary' %>
  </div>
</div>
