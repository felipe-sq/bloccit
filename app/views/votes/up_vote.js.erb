<% if @vote.valid? %>
  $('.vote-arrows-pull-left' +'#post-votes-+<%= @post.id %>').html("<%= escape_javascript(render partial: 'votes/voter', locals: { post: @post }) %>");
  $('.js-votes-count' +'#post-votes-<%= @post.id %>').html('<strong><%= @post.points %></strong>')
<% else %>
  $('.flash').prepend("<div class='alert alert-danger'><button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash[:error] %></div>");
<% end %>
